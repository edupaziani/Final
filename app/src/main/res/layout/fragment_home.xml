<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

        <!-- Perfil do Usuário -->
        <TextView
            android:id="@+id/tvHelloUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DHIRAJ KHADKA"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvHelloUser"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvUserName" />

        <TextView
            android:id="@+id/consultaXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar consulta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" />
        <!-- Banner -->
        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:src="@drawable/canvas"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/consultaXML"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/suplementosXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suplementos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/bannerImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" />
        <!-- Banner -->
        <ImageView
            android:id="@+id/suplementosImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:src="@drawable/nutrients"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/suplementosXML"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/mentalXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mindfullness"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/suplementosImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" />
        <!-- Banner -->
        <ImageView
            android:id="@+id/mentalImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:src="@drawable/peace"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/mentalXML"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/exercicioXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atividades físicas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/mentalImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" />
        <!-- Banner -->
        <ImageView
            android:id="@+id/exercicioImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:src="@drawable/exercise"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/exercicioXML"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/remedXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remédio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/exercicioImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" />
        <!-- Banner -->
        <ImageView
            android:id="@+id/remedImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:src="@drawable/medication"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:clipToOutline="true"
            android:background="@drawable/rounded_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/remedXML"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>